#-------------------------------------------------------------------------------
# Default to personal
#-------------------------------------------------------------------------------

Host github.com
	Hostname github.com
	User git
	Identityfile ~/.ssh/id_rsa_personal

Host gitlab.com
	Hostname gitlab.com
	User git
	Identityfile ~/.ssh/id_rsa_personal

